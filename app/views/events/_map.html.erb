  <%= javascript_include_tag 'userlogin/addmarker.js'%>

  <div id="wrapper">
    <div id="sidebar-wrapper">
      <div id = "mappp" style="height: 100%;" align="center"></div>
    </div>
    <div id="page-content-wrapper">
      <div class="row col-lg-12">
        <div class="col-lg-6 text-left">
          <div class="event-buttons"><h2>Events near you:</h2></div>
        </div>
        <div class="col-lg-6 text-right">
          <div class="event-buttons pull-right"><%= button_to "Create an event", new_event_path, method: "get", class: "btn-success" %></div>
          <div class="event-buttons"><%= button_to "See all events", allevents_path, method: "get", class: "btn-info" %></div>
        </div>
      </div>
      <div class="page-content">
        <div class="container">
          <div class="row col-lg-12 nearby-event-page" >
              <%closeevents.each do |event|%>
                <div class="col-lg-5 event-card" id="<%=event.sport%>" href="event">
                  <h1><%=link_to event.event_name, event_path(event)%></h1>
                  <h2 class=" pinnn">
                    <%= link_to "Show", class: "showme glyphicon glyphicon-map-marker", data: {lat: event.latitude, long: event.longitude} do %>
                  <% end %>
                  </h2>
                </div>
              <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>

