  <div class="container">
    <div class="row" id="create-event">
      <div class="col-md-12">
        <div class="row">
          <tr><h2>All Events</h2></tr>
          <table class="table table-striped">
            <thead>
              <tr>
                <td class="col-md-2">Date</td>
                <td class="col-md-4">Event Name</td>
                <td class="col-md-3">Location</td>
                <td class="col-md-1">Participants</td>
                <td class="col-md-1"></td>
              </tr>
            </thead>

            <tbody>
              <% @events.each do |event| %>
              <tr>
                <td><%= event.date %></td>
                <td><%= event.event_name %></td>
                <td><%= event.location %></td>
                <td><%= event.participants %></td>
                <td class="col-md-1"><%= button_to "Join", join_path(id: event.id), class: "btn"%></td>
              <% end %>
              </tr>
            </tbody>
          </table>
            <%= link_to "Create an event", new_event_path, class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
