<div class="container">
  <div class="login">

      <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
      <% end %>

		<div class="login-form form-group">

      <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, :placeholder => "Email", class_name: "form-control"%>
      </div>
      <div class="form-group">
				<%= f.password_field :password, :placeholder => "Password", class_name: "form-control"%>
      </div>
				<%= f.submit "Log in" %>
			<% end %>

		</div>
	</div>
</div>
