<div class="container">
	<div class="row" id="create-event">
		<h1> <%= @user.first_name.capitalize %>'s Profile</h1>
		<div class="col-md-12">
		<div class="row"
			<div class="table">
				<table class="table table-striped text-center">
					<tr><h2>Created Events</h2></tr>
					<thead>
						<tr>
							<td class="col-md-2">Date</td>
							<td class="col-md-4">Event Name</td>
							<td class="col-md-3">Location</td>
							<td class="col-md-1">Host</td>
							<td class="col-md-1">Attending</td>
							<td class="col-md-1"></td>
							<td class="col-md-1"></td>
						</tr>
					</thead>

					<tbody>
						<% @user.created_events.each do |event| %>
						<tr>
							<td><%= event.date %></td>
							<td><%= event.event_name %></td>
							<td><%= event.location %></td>
							<td><%= @user.first_name %></td>
							<td><%= event.participants %></td>
							<td class="col-md-1"><%= button_to "edit", edit_event_path, method: "put" %></td>
							<td class="col-md-1"><%= button_to "leave", leave_path %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
      <%= button_to "Create an event", new_event_path, method: "get", class: "btn-info" %>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row" id="create-event">
		<div class="col-md-12">
			<div class="row">
				<table class="table table-striped text-center">
					<tr><h2>Joined Events</h2></tr>
					<thead>
						<tr>
							<td class="col-md-2">Date</td>
							<td class="col-md-4">Event Name</td>
							<td class="col-md-3">Location</td>
							<td class="col-md-1">Host</td>
							<td class="col-md-1">Attending</td>
							<td class="col-md-1"></td>
							<td class="col-md-1"></td>
						</tr>
					</thead>

					<tbody>
						<% @user.events.each do |event| %>
						<tr>
							<td><%= event.date %></td>
							<td><%= event.event_name %></td>
							<td><%= event.location %></td>
							<td><%= (event.creator).first_name %></td>
							<td><%= event.participants %></td>
							<td class="col-md-1"><%= link_to "leave", leave_path(id: event.id), method: "put" %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
        <%= button_to "All events", events_path, method: "get", class: "btn-info"%>
			</div>
		</div>
	</div>
</div>

