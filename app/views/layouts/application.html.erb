<!DOCTYPE html>
<html>
<head>
  <title>PickUp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<div class='nav-bar'>
			<% if @current_user %>
				<%= @current_user.email %>
				<%= link_to "Logout", logout_path, method: "delete" %>
			<% else %>
				<%= link_to "Login", 'login' %>
				<%= link_to "Signup", 'signup' %>
			<% end %>
		</div>
	</header>

<%= yield %>

</body>
</html>
