
<div class="site-wrapper">

      <div class="site-wrapper-inner">
      </div>
        <div class="cover-container">

          <div class="inner cover">
            <h1 class="cover-heading text-shadow-format">Pick Up!</h1>
            <p class="lead">
              <%=link_to 'Register', new_user_path, class:"btn btn-lg btn-default spacer"%>

              <%=link_to 'Login', login_path, class:"btn btn-lg btn-default spacer"%>
            </p>
            <p class="lead text-shadow-format">A whole new way to find activities
            </p>
            <p class="lead">
              <%=link_to 'Learn More', about_path, class:"btn btn-lg btn-default"%>
            </p>
            
          </div>


        </div>
      <div class="site-wrapper-bottom">
      </div>


    </div>
<div class="site-footer">
  <table  width = "100%" height="100%">
    <tr>
      <td class="footer-box">
        Events near you:
      </td>
        <% @events.each do |event| %>
          <td class="footer-box">
          <%=link_to event_path(event) do %>
            <div>
            <%=event.event_name%>
            <br>
            <%=event.location%>
            <br>
            <%=event.start.strftime("%I:%M %P ")%>
            </div>
          <%end%>
          </td>
        <%end%>
    </tr>
  </table>
</div>
